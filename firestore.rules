rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users:
    // - Anyone can read user profiles.
    // - Authenticated users can create or update their own profiles.
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Deleting user docs is disallowed for safety.
    }

    // Posts:
    // - Anyone can read posts.
    // - Authenticated users can create posts.
    // - The post owner or a collaborator can update or delete the post.
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (get(/databases/$(database)/documents/posts/$(postId)).data.userId == request.auth.uid || request.auth.uid in get(/databases/$(database)/documents/posts/$(postId)).data.collaboratorIds);
    }

    // Stories:
    // - Anyone can read stories.
    // - Authenticated users can create stories.
    // - The story owner can update or delete the story.
    match /stories/{storyId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/stories/$(storyId)).data.userId == request.auth.uid;
    }
    
    // Conversations:
    // - Only users who are part of a conversation can read or write to it.
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.userIds;
      
      // Messages sub-collection:
      // - Users in the conversation can read and create messages.
      match /messages/{messageId} {
        allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.userIds;
        allow update, delete: if false; // Disallow editing/deleting messages for simplicity.
      }
    }
    
    // Activity:
    // - A user can only read their own activity feed.
    // - Authenticated users can create activity items.
    match /activity/{activityId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.notifiedUserId;
      allow create: if request.auth != null;
      allow update, delete: if false; // Activity is immutable.
    }
  }
}
